/*Q4)Write a program to accpet the positive numbers  
from user and display the sum of that numbers using loop.*/
package Question4;
import java.util.*;
public class Sum 
{
	public static void main(String args[])
	{
	int size,i,sum=0;
	Scanner in=new Scanner(System.in);
	System.out.println("Enter size of array:");
	size=in.nextInt();
	int a[]=new int[size];
	System.out.println("Enter Numbers:");
	for(i=0;i<size;i++)
	{
		a[i]=in.nextInt();
	}
	//System.out.println("The Addition of positive numbers");
	for(i=0;i<size;i++)
	{
		if(a[i]>0)
		sum=sum+a[i];
	}
	System.out.println("The Addition of positive numbers = "+sum);
}
}

